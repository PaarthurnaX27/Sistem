    <div class="card-body bg-light">
      <form
        id="frmModulEkle"
        asp-controller="DtModul"
        asp-action="ModulEkle"
        method="post"
      >
        <div class="form-group">
          <div class="card-body p-3">
            <div class="row mb-2">
              <div class="col-md-3">
                <label class="col-form-label-sm">Modül</label>
                <input
