                  placeholder="Modül"
                  asp-for="@Model.ModulAdi"
                  required
                />
              </div>
              <div class="col-md-3">
                <label class="col-form-label-sm">Modül Kısaltma</label>
                <input
                  type="Text"
                  class="form-control form-control-sm text-capitalize"
