@model EntityLayer.Concrete.Modul
@{
    var error = TempData["error"];
    if (error != null)
    {
        <script type="text/javascript">window.onload = function () {
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });

                Toast.fire({
                    icon: 'error',
                    title: 'Ekleme İşlemi Başarısız Oldu'
                })
            };</script>
    }
}
<div class="card">
    <div class="card-header bg-gray">
        <div class="row justify-content-between">
            <div class="col-md-3">
                <div class="row">
                    <h3>Modül Ekle</h3>
                </div>
            </div>
            <div class="col-md-2">
                <div class="row justify-content-end">
                    <div class="col-4">
                        <h4>
                            <button type="submit" form="frmModulEkle"
                                class=" align-right btn btn-primary btn-lg float-right"><i
                                    class="bi bi-database-add"></i></button>
                        </h4>
                    </div>
                    <div class="col-4">
                        <a asp-action="DtModul" asp-controller="DtModul" class=" btn btn-lg btn-danger"><i
                                class="bi bi-x-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body bg-light">
        <form id="frmModulEkle" asp-controller="DtModul" asp-action="ModulEkle" method="post">
            <div class="form-group ">
                <div class="card-body p-3">
                    <div class="row mb-2">
                        <div class="col-md-3">
                            <label class="col-form-label-sm">Modül</label>
                            <input type="Text" class="form-control form-control-sm text-capitalize" placeholder="Modül"
                                asp-for="@Model.ModulAdi" required />
                        </div>
                        <div class="col-md-3">
                            <label class="col-form-label-sm">Modül Kısaltma</label>
                            <input type="Text" class="form-control form-control-sm text-capitalize"
                                placeholder="Modül Kısaltma" asp-for="@Model.ModulKisaltma" required />
                        </div>
                        @* <div class="col-md-3">
                            <label>Servis Departmanı</label>
                            <select id="servisDepartmani" class="form-control select2bs4" style="width: 100%;"
                                required>
                                <option selected disabled>Servis Departmanı Seçin</option>
                                @foreach (var servisDepartmaniList in ViewBag.servisDepartmaniList)
                                {
                                    <option value="@servisDepartmaniList.ServisDepartmanId">
                                        @servisDepartmaniList.ServisDepartmanAdi</option>
                                }
                            </select>
                        </div> *@
                       
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Multiple</label>
                                <select class="select2" multiple="multiple" data-placeholder="Select a State" style="width: 100%;" name="Departmans[]" required>
                                   
                                @foreach (var servisDepartmaniList in ViewBag.servisDepartmaniList)
                                {
                                    <option value="@servisDepartmaniList.ServisDepartmanId">
                                        @servisDepartmaniList.ServisDepartmanAdi</option>
                                }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
