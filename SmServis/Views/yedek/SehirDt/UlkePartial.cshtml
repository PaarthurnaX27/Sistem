@{
    @model Tuple<Ulke>
    var db = new DataAccessLayer.Concrete.SmServisContext();
}
@{
    if (ViewBag.addorupdate == "update")
    {
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <h3 class=" col-9 card-title">Destek Tablosu</h3>
                    <a type="button" asp-action="Edit" asp-controller="DestekTablosu" asp-route-table="ulke" asp-route-addorupdate="add" class=" col-3 btn btn-primary">Yeni Ekle</a>
                </div>

            </div>
            <!-- ./card-header -->
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>

                            <th>Ülke Adı</th>
                            <th>Binary</th>
                            <th>Triple</th>
                            <th>Telefon Kodu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.list)
                        {
                            <tr data-widget="expandable-table" aria-expanded="false">

                                <td>@item.UlkeAdi</td>
                                <td>@item.BinaryCode</td>
                                <td>@item.TripleCode</td>
                                <td>@item.TelefonKodu</td>


                            </tr>
                            <tr class="expandable-body">
                                <td colspan="5">
                                    <div class="card  bg-light">
                                        <form asp-controller="DestekTablosu" asp-action="EditAndAddUlke" asp-route-id="@item.UlkeId" asp-route-addorupdate="update" asp-route-table="@ViewBag.table" method="post">
                                            <div class="form-group ">
                                                <div class="card-body p-3">
                                                    <div class="row mb-2">
                                                        <div class="col-md-3">
                                                            <input type="Text" class="form-control " value="@item.UlkeAdi" placeholder="Ülke Adı" asp-for="Item1.UlkeAdi" required>
                                                        </div>
                                                        <div class="col-md-3">

                                                            <input type="Text" class="form-control" value="@item.BinaryCode"  asp-for="Item1.BinaryCode" required
                                                                   placeholder="Binary Code">
                                                        </div>

                                                        <div class="col-md-3">
                                                            <input class="form-control"  value="@item.TripleCode" asp-for="Item1.TripleCode" type="text"  />
                                                        </div>
                                                        <div class="col-md-3">
                                                            <input class="form-control" placeholder="Telefon Kodu" value="@item.TelefonKodu" type="number" asp-for="Item1.TelefonKodu" />
                                                        </div>


                                                    </div>

                                                </div>
                                                <div class="clearfix">
                                                    <button type="submit" class=" align-right btn btn-primary m-3 col-2 float-right"> Güncelle</button>
                                                </div>

                                            </div>
                                        </form>

                                    </div>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    }
    else if (ViewBag.addorupdate == "add")
    {

        <form asp-controller="DestekTablosu" asp-action="EditAndUpdateUlke" asp-route-addorupdate="add" asp-route-table="@ViewBag.table" method="post">
            <div class="form-group ">
                <div class="card-body p-3">
                    <div class="row mb-2">
                        <div class="col-md-3">
                            <input type="Text" class="form-control " placeholder="Ülke Adı" asp-for="Item1.UlkeAdi">
                        </div>
                        <div class="col-md-3">

                            <input type="Text" class="form-control " asp-for="Item1.BinaryCode"
                                   placeholder="Binary Code">
                        </div>

                        <div class="col-md-3">
                            <input class="form-control" placeholder="Triple Code" type="text" asp-for="Item1.TripleCode" />
                        </div>
                        <div class="col-md-3">
                            <input class="form-control" placeholder="Telefon Kodu " type="number" asp-for="Item1.TelefonKodu" />
                        </div>


                    </div>
                </div>
                <div class="clearfix">
                    <button type="submit" class=" align-right btn btn-primary m-3 col-2 float-right"> Ekle</button>
                </div>

            </div>
        </form>
    }
}
