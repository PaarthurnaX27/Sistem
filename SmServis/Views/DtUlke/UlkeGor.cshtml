@using BusinessLayer.Concrete;
@using DataAccessLayer.EntityFramework;
@{
    UlkeManager um = new UlkeManager(new EfUlkeDal());
    KullaniciManager km = new KullaniciManager(new EfKullaniciDal());
    int ulkeId = ViewBag.id;
    var tblUlke = um.TGetByID(ulkeId);
    var sonDegistiren = km.TGetByID(tblUlke.SonDegistiren);
    var olusturan = km.TGetByID(tblUlke.Olusturan);

}
<div id="divContent" class="card  bg-light">
    <form method="post">
        <div class="form-group ">
            <div class="card-body p-3">
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label>Ülke Adı</label>
                        <label class="form-control text-capitalize">@tblUlke.UlkeAdi</label>
                    </div>
                    <div class="col-md-3">
                        <label>Telefon Kodu</label>
                        <label class="form-control text-uppercase">@tblUlke.TelefonKodu</label>
                    </div>
                    <div class="col-md-3">
                        <label>İkili Kısaltma</label>
                        <label class="form-control text-uppercase">@tblUlke.BinaryCode</label>
                    </div>
                    <div class="col-md-3">
                        <label>Üçlü Kısaltma</label>
                        <label class="form-control text-uppercase">@tblUlke.TripleCode</label>
                    </div>

                </div>
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label>Oluşturan</label>
                        <label class="form-control ">@olusturan.KullaniciAdi @olusturan.KullaniciSoyadi</label>
                    </div>
                    <div class="col-md-3">
                        <label>Oluşturulma Tarihi</label>
                        <label class="form-control">@tblUlke.OlusturulmaTarih.Date.ToShortDateString()</label>
                    </div>
                    <div class="col-md-3">
                        <label>Son Değiştiren</label>
                        <label class="form-control ">@sonDegistiren.KullaniciAdi @sonDegistiren.KullaniciSoyadi</label>
                    </div>
                    <div class="col-md-3">
                        <label>Son Değiştirilme Tarihi</label>
                        <label class="form-control">@tblUlke.SonDegistirmeTarih.Date.ToShortDateString()</label>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label>Durum</label>
                        @{
                            if (tblUlke.Silindi == false)
                            {
                                <label class="form-control ">Mevcut</label>
                            }
                            else
                            {
                                <label class="form-control ">Silindi</label>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
