@using BusinessLayer.Concrete;
@using DataAccessLayer.EntityFramework;
@{
    UlkeManager um = new UlkeManager(new EfUlkeDal());
    KullaniciManager km = new KullaniciManager(new EfKullaniciDal());
    int ulkeId = ViewBag.id;
    var tblUlke = um.TGetByID(ulkeId);
    var sonDegistiren = km.TGetByID(tblUlke.SonDegistiren);
    var olusturan = km.TGetByID(tblUlke.Olusturan);

}
<div class="card">
    <div class="card-header bg-gray">
        <div class="row justify-content-between">
            <div class="col-md-3">
                <div class="row">
                    <h3>Ülke Gör</h3>
                </div>
            </div>
            <div class="col-md-2">
                <div class="row justify-content-end">
                    <div class="col-4">
                        <h4>
                            <button type="submit" form="frmModulEkle"
                                    class=" align-right btn btn-primary btn-lg float-right not-allowed" disabled>
                                <i class="bi bi-database-add "></i>
                            </button>
                        </h4>
                    </div>
                    <div class="col-4">
                        <a asp-action="DtUlke" asp-controller="DtUlke" class=" btn btn-lg btn-danger "><i class="bi bi-x-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body bg-light">
        <form method="post">
            <div class="form-group ">
                <div class="card-body p-3">
                    <div class="row mb-2">
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Ülke Adı</label>
                            <label class="form-control form-control-sm text-capitalize">@tblUlke.UlkeAdi</label>
                        </div>
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Telefon Kodu</label>
                            <label class="form-control form-control-sm text-uppercase">@tblUlke.TelefonKodu</label>
                        </div>
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">İkili Kısaltma</label>
                            <label class="form-control form-control-sm text-uppercase">@tblUlke.BinaryCode</label>
                        </div>
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Üçlü Kısaltma</label>
                            <label class="form-control form-control-sm text-uppercase">@tblUlke.TripleCode</label>
                        </div>

                    </div>
                    <div class="row mb-2">
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Oluşturan</label>
                            <label class="form-control form-control-sm ">@olusturan.KullaniciAdi @olusturan.KullaniciSoyadi</label>
                        </div>
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Oluşturulma Tarihi</label>
                            <label class="form-control form-control-sm">@tblUlke.OlusturulmaTarih.Date.ToShortDateString()</label>
                        </div>
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Son Değiştiren</label>
                            <label class="form-control form-control-sm ">@sonDegistiren.KullaniciAdi @sonDegistiren.KullaniciSoyadi</label>
                        </div>
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Son Değiştirilme Tarihi</label>
                            <label class="form-control form-control-sm">@tblUlke.SonDegistirmeTarih.Date.ToShortDateString()</label>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-3">
                            <label class="col-form-label col-form-label-sm">Durum</label>
                            @{
                                if (tblUlke.Silindi == false)
                                {
                                    <label class="form-control form-control-sm">Mevcut</label>
                                }
                                else
                                {
                                    <label class="form-control form-control-sm">Silindi</label>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
