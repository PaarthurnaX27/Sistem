@using BusinessLayer.Concrete;
@using DataAccessLayer.EntityFramework;
@{
    var unvm = new UnvanManager(new EfUnvanDal());
    var km = new KullaniciManager(new EfKullaniciDal());

}

<div class="card bg-light">
    <div class="card">
        <div class="card-header bg-gray">
            <div class="row justify-content-between">
                <div class="col-md-3">
                    <h3>Unvan Destek Tablosu</h3>
                </div>
                <div class="col-md-2">
                    <div class="row justify-content-end">
                        <div class="col-4">
                            <a asp-action="Index" asp-controller="DestekTablosu" class=" btn btn-lg btn-danger ">
                                <i class="bi bi-x-lg"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body bg-light">
            <div class="m-2 mb-3 ">
                <div class="col ">
                    <form id="fltAreaUnvan" asp-controller="DtUnvan" asp-action="DtUnvan" asp-route-id="" method="post">
                        <div class="row  ">
                            <div class="col-md-4 mb-1">
                                <label class="col-form-label col-form-label-sm">Unvan</label>
                                <input type="text" class="form-control form-control-sm" id="inputUnvanAciklama" name="unvanAciklama" value="@ViewBag.unvanAciklama" placeholder="Unvan">
                            </div>
                            <div class="col-md-4 mb-1">
                                <label class="col-form-label col-form-label-sm">Kısaltma</label>
                                <input type="text" class="form-control form-control-sm" id="inputUnvanKisaltma" name="unvanKisaltma" value="@ViewBag.unvanKisaltma" placeholder="Kısaltma">

                            </div>
                        </div>
                        <hr class="divider">
                        <div class="row ">
                            <div class="form-check col-4">
                                <input name="silindi" id="chckSilindi" type="checkbox" value="true" checked="@ViewBag.chckSilindi" onclick="filter_isDeleted()" />
                                @if (ViewBag.lblSilindi == null)
                                {
                                    <label id="lblChck" class="form-check-label" for="checkboxMusteri">
                                        Mevcut
                                    </label>
                                }
                                else
                                {
                                    <label id="lblChck" class="form-check-label" for="checkboxMusteri">
                                        @ViewBag.lblSilindi
                                    </label>
                                }
                            </div>
                        </div>
                        <hr class="divider">
                        <button onclick="filterSifirla()" type="button" class="btn btn-primary">Sıfırla</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <div class="col-md-12 mb-1 d-flex justify-content-between">
                <button type="submit" form="fltAreaUnvan" class="btn btn-outline-primary rounded-1 col-md-3 mb-1">
                    Ara
                    <i class="bi bi-binoculars"></i>
                </button>
                <a onclick="icerikGor('Unvan')" class="btn btn-outline-primary rounded-1 col-md-3 mb-1">
                    Gör
                    <i class="bi bi-eye"></i>
                </a>
                <a onclick="guncelle('Unvan')" class="btn btn-outline-primary rounded-1 col-md-3 mb-1">
                    Değiştir
                    <i class="bi bi-arrow-counterclockwise"></i>
                </a>
                <a asp-controller="DtUnvan" asp-action="UnvanEkle" class="btn btn-outline-primary rounded-1 col-md-3 mb-1">
                    Ekle
                    <i class="bi bi-clipboard-plus"></i>
                </a>
            </div>
        </div>
        <div class="card-body">
            <table id="tblDestek" class="table table-borderless table-hover  ">
                <thead>
                    <tr>
                        <th>Seç</th>
                        <th>Unvan</th>
                        <th>Kısaltma</th>
                        <th>Son Değiştiren</th>
                        <th>Oluşturan</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.unvanList)
                    {

                        var olusturan = km.TGetByID(item.Olusturan);
                        var sonDegistiren = km.TGetByID(item.SonDegistiren);
                        <tr>
                            <td><input name="radio" type="radio" value="@item.UnvanId" /></td>
                            <td class="text-capitalize">@item.UnvanAciklama</td>
                            <td class="text-uppercase">@item.UnvanKisaltma </td>
                            <td>@olusturan.KullaniciAdi @olusturan.KullaniciSoyadi</td>
                            <td>@sonDegistiren.KullaniciAdi @sonDegistiren.KullaniciSoyadi</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>


<div class="modal fade" id="modal">
    <div class="modal-dialog">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h4 class="modal-title">UYARI</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Lütfen Seçim Yapınız&hellip;</p>
            </div>
            <div class="modal-footer justify-content-start">
                <button type="button" class="btn btn-outline-light" data-dismiss="modal">Kapat</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


