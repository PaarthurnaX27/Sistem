@model EntityLayer.Concrete.Unvan
@{
    var error = TempData["error"];
    if (error != null)
    {
        <script type="text/javascript">window.onload = function () {
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });

                Toast.fire({
                    icon: 'error',
                    title: 'Ekleme İşlemi Başarısız Oldu'
                })

            };</script>
    }
}
<div class="card">
    <div class="card-header bg-gray">
        <div class="row justify-content-between">
            <div class="col-md-3">
                <div class="row">
                    <h3>Unvan Ekle</h3>
                </div>
            </div>
            <div class="col-md-2">
                <div class="row justify-content-end">
                    <div class="col-4">
                        <button type="submit" form="frmUnvanEkle" class="btn btn-info btn-lg"><i class="bi bi-database-add"></i></button>
                    </div>
                    <div class="col-4">
                        <a asp-action="DtUnvan" asp-controller="DtUnvan" class=" btn btn-lg btn-danger"><i class="bi bi-x-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body bg-light">
        <form id="frmUnvanEkle" asp-controller="DtUnvan" asp-action="UnvanEkle" method="post">
            <div class="form-group ">
                <div class="card-body p-3">
                    <div class="row mb-2">
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Unvan</label>
                            <input type="Text" class="form-control form-control-sm text-capitalize" placeholder="Unvan" asp-for="@Model.UnvanAciklama" required />
                        </div>
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Kısaltma</label>
                            <input type="text" class="form-control form-control-sm text-uppercase" asp-for="@Model.UnvanKisaltma" placeholder="Kısaltma" required />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
