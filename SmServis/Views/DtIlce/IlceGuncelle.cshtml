@using BusinessLayer.Concrete;
@using DataAccessLayer.EntityFramework;
@model EntityLayer.Concrete.Ilce
@{
    IlceManager ilcem = new IlceManager(new EfIlceDal());
    SehirManager sm = new SehirManager(new EfSehirDal());
    KullaniciManager km = new KullaniciManager(new EfKullaniciDal());

    int ilceId = ViewBag.id;
    var ilce = ilcem.TGetByID(ilceId);
    var sehir = sm.TGetByID(ilce.SehirId);
    var olusturan = km.TGetByID(ilce.Olusturan);
    var error = TempData["error"];
    if (error != null)
    {
        <script type="text/javascript">window.onload = function () {
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });
                Toast.fire({
                    icon: 'error',
                    title: 'Güncelleme İşlemi Başarısız Oldu'
                })
            };</script>
    }
}
<div id="divContent" class="card  bg-light">
    <form asp-controller="DtIlce" asp-action="IlceGuncelle" asp-route-ilceId="@ilceId" asp-route-olusturan="@ilce.Olusturan" asp-route-olusturulmaTarihi="@ilce.OlusturulmaTarih" method="post">
        <div class="form-group ">
            <div class="card-body p-3">
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label>Ilce Adı</label>
                        <input type="Text" class="form-control text-uppercase" value="@ilce.IlceAdi" placeholder="Ilce Adı" name="IlceAdi" asp-for="@Model.IlceAdi">
                    </div>
                    <div class="col-md-3">
                        <label>Sehir</label>
                        <select id="sehir2" asp-for="@Model.SehirId" class="form-control select2bs4" style="width: 100%;">
                            <option selected value="@sehir.SehirId">@sehir.SehirAdi</option>
                            @foreach (var sehirList in ViewBag.sehirList)
                            {
                                <option value="@sehirList.SehirId">@sehirList.SehirAdi</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label>Posta Kodu</label>
                        <input type="Text" class="form-control " placeholder="Posta Kodu" name="PostaKodu" value="@ilce.PostaKodu" asp-for="@Model.PostaKodu" required />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label>Oluşturan</label>
                        <label class="form-control ">@olusturan.KullaniciAdi @olusturan.KullaniciSoyadi</label>
                    </div>
                    <div class="col-md-3">
                        <label>Oluşturulma Tarihi</label>
                        <label class="form-control">@ilce.OlusturulmaTarih.Date.ToShortDateString()</label>
                    </div>
                    <div class="col-md-3">
                        <label>Son Değiştirme Tarihi</label>
                        <label class="form-control">@ilce.SonDegistirmeTarih.Date.ToShortDateString()</label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end">

                <button type="button" class="btn btn-danger m-3 col-2" data-toggle="modal" data-target="#modalSil">Sil</button>
                <button type="submit" class=" align-right btn btn-primary m-3 col-2 float-right"> Güncelle</button>
            </div>
        </div>
    </form>
</div>

<div class="modal fade" id="modalSil">
    <div class="modal-dialog">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h4 class="modal-title">Ilce Silinecek</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <p>Silmek istediğinizden emin misiniz?&hellip;</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-outline-light" data-dismiss="modal">İptal</button>
                <a href="/DtIlce/DeleteIlce/@ilceId" class="btn btn-outline-light">Sil</a>
            </div>
        </div>

    </div>

</div>

