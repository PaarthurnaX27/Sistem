@using BusinessLayer.Concrete;
@using DataAccessLayer.EntityFramework;
@model EntityLayer.Concrete.Ilce
@{
    IlceManager ilcem = new IlceManager(new EfIlceDal());
    SehirManager sm = new SehirManager(new EfSehirDal());
    KullaniciManager km = new KullaniciManager(new EfKullaniciDal());

    int ilceId = ViewBag.id;
    var ilce = ilcem.TGetByID(ilceId);
    var sehir = sm.TGetByID(ilce.SehirId);
    var olusturan = km.TGetByID(ilce.Olusturan);
    var error = TempData["error"];
    if (error != null)
    {
        <script type="text/javascript">window.onload = function () {
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });
                Toast.fire({
                    icon: 'error',
                    title: 'Güncelleme İşlemi Başarısız Oldu'
                })
            };</script>
    }
}
<style>
    .select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 31px !important;
    }
</style>
<div id="divContent" class="card  bg-light">
    <div class="card-header bg-gray">
        <div class="row justify-content-between">
            <div class="col-md-3">
                <div class="row">
                    <h3>İlçe Güncelle</h3>
                </div>
            </div>
            <div class="col-md-2">
                <div class="row justify-content-end">
                    <div class="col-4">
                        <h4>
                            <button type="submit" form="frmIlceGuncelle" class=" align-right btn btn-info btn-lg float-right"><i class="bi bi-database-fill-add"></i></button>
                        </h4>
                    </div>
                    <div class="col-4">
                        <h4>
                            <button type="button" class=" align-right btn btn-warning btn-lg float-right" data-toggle="modal" data-target="#modalSil"><i class="bi bi-trash3-fill" style="color: white;"></i></button>
                        </h4>
                    </div>
                    <div class="col-4">
                        <a asp-action="DtIlce" asp-controller="DtIlce" class=" btn btn-lg btn-danger"><i class="bi bi-x-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <form id="frmIlceGuncelle" asp-controller="DtIlce" asp-action="IlceGuncelle" asp-route-ilceId="@ilceId" asp-route-olusturan="@ilce.Olusturan" asp-route-olusturulmaTarihi="@ilce.OlusturulmaTarih" method="post">
        <div class="form-group ">
            <div class="card-body p-3">
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label class="col-form-label-sm">İlçe Adı</label>
                        <input type="Text" class="form-control form-control-sm text-uppercase" value="@ilce.IlceAdi" placeholder="Ilce Adı" name="IlceAdi" asp-for="@Model.IlceAdi">
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label-sm">Sehir</label>
                        <select id="sehir2" asp-for="@Model.SehirId" class="form-control select2bs4" style="width: 100%;">
                            <option selected value="@sehir.SehirId">@sehir.SehirAdi</option>
                            @foreach (var sehirList in ViewBag.sehirList)
                            {
                                <option value="@sehirList.SehirId">@sehirList.SehirAdi</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label-sm">Posta Kodu</label>
                        <input type="number" class="form-control form-control-sm " placeholder="Posta Kodu" name="PostaKodu" value="@ilce.PostaKodu" asp-for="@Model.PostaKodu" required />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label class="col-form-label-sm">Oluşturan</label>
                        <label class="form-control form-control-sm ">@olusturan.KullaniciAdi @olusturan.KullaniciSoyadi</label>
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label-sm">Oluşturulma Tarihi</label>
                        <label class="form-control form-control-sm">@ilce.OlusturulmaTarih.Date.ToShortDateString()</label>
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label-sm">Son Değiştirme Tarihi</label>
                        <label class="form-control form-control-sm">@ilce.SonDegistirmeTarih.Date.ToShortDateString()</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="modal fade" id="modalSil">
    <div class="modal-dialog">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h4 class="modal-title">Ilce Silinecek</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <p>Silmek istediğinizden emin misiniz?&hellip;</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-outline-light" data-dismiss="modal">İptal</button>
                <a href="/DtIlce/DeleteIlce/@ilceId" class="btn btn-outline-light">Sil</a>
            </div>
        </div>

    </div>

</div>

