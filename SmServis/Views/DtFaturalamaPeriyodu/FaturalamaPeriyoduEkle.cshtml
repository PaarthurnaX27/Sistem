@model EntityLayer.Concrete.FaturalamaPeriyodu
<style>
    .select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 31px !important;
    }
</style>
@{  
    var error = TempData["error"];
    if (error != null)
    {
        <script type="text/javascript">window.onload = function () {
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });

                Toast.fire({
                    icon: 'error',
                    title: 'Ekleme İşlemi Başarısız Oldu'
                })
            };</script>
    }
}
<div class="bg-light shadow">
  <div class="bg-secondary rounded-top">
    <div class="d-flex container-fluid nav-general">
      <div class="col-sm-6">
        <div class="nav-brand">Faturalama Periyodu Ekle</div>
      </div>
      <div class="col-sm-6 col-md-5 col-lg-3 ml-auto">
        <ul class="list-items float-right">
          <li class="col-sm-4 mr-3">
            <button
              type="submit"
              form="frmFaturalamaPeriyoduEkle"
              class="btn btn-info btn-lg"
            >
              <i class="bi bi-database-add"></i>
            </button>
          </li>
          @*
          <li class="col-sm-4">
            <button
              type="button"
              class="btn btn-warning btn-lg"
              data-toggle="modal"
              data-target="#modalSil"
            ></button>
          </li>
          *@
          <li class="col-sm-4">
            <a
              asp-action="DtFaturalamaPeriyodu"
              asp-controller="DtFaturalamaPeriyodu"
              class="btn btn-danger btn-lg"
            >
              <i class="bi bi-x-lg"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="card-body bg-light">
      <div class="card-body bg-light">
        <form
          id="frmFaturalamaPeriyoduEkle"
          asp-controller="DtFaturalamaPeriyodu"
          asp-action="FaturalamaPeriyoduEkle"
          method="post"
        >
          <div class="form-group">
            <div class="card-body p-3">
              <div class="row mb-2">
                <div class="col-md-3">
                  <label class="col-form-label-sm"
                    >Faturalama Periyodu Açıklama</label
                  >
                  <input
                    type="Text"
                    class="form-control form-control-sm text-capitalize"
                    placeholder="Faturalama Periyodu Açıklama"
                    asp-for="@Model.FaturalamaPeriyoduAciklama"
                    required
                  />
                </div>
                <div class="col-md-3">
                  <label class="col-form-label-sm">Periyot Sayısı</label>
                  <input
                    type="number"
                    class="form-control form-control-sm text-capitalize"
                    placeholder="Faturalama Periyodu"
                    asp-for="@Model.PeriyotSayisi"
                    required
                  />
                </div>
                <div class="col-md-3">
                  <label class="col-form-label-sm">Periyot</label>
                  <select
                    id="slctPeriyot"
                    asp-for="@Model.PeriyotNo"
                    class="form-control select2bs4"
                    style="width: 100%"
                    required
                  >
                    <option selected disabled>Periyot Seçin</option>
                    <option value="1">Günluk</option>
                    <option value="2">Haftalık</option>
                    <option value="3">Aylık</option>
                    <option value="4">Yıllık</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
