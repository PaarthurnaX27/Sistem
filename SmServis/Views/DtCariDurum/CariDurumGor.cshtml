@using BusinessLayer.Concrete;
@using DataAccessLayer.EntityFramework;
@{
    CariDurumManager cdm = new CariDurumManager(new EfCariDurumDal());
    KullaniciManager km = new KullaniciManager(new EfKullaniciDal());
    int cariDurumId = ViewBag.id;
    var tblCariDurum = cdm.TGetByID(cariDurumId);
    var sonDegistiren = km.TGetByID(tblCariDurum.SonDegistiren);
    var olusturan = km.TGetByID(tblCariDurum.Olusturan);

}
<div class="bg-light">
  <div class="bg-secondary rounded-top">
    <div class="d-flex container-fluid nav-general">
      <div class="col-sm-6">
        <div class="nav-brand">Cari Durumu Gör</div>
      </div>
      <div class="col-sm-6 col-md-5 col-lg-3 ml-auto">
        <ul class="list-items float-right">
          <li class="col-sm-4 mr-3">
            <button
              type="submit"
              form="frmModulEkle"
              class="btn btn-info btn-lg not-allowed"
            >
              <i class="bi bi-database-add"></i>
            </button>
          </li>
          @*
          <li class="col-sm-4">
            <button
              type="button"
              class="btn btn-warning btn-lg"
              data-toggle="modal"
              data-target="#modalSil"
            ></button>
          </li>
          *@
          <li class="col-sm-4">
            <a
              asp-action="DtCariDurum"
              asp-controller="DtCariDurum"
              class="btn btn-danger btn-lg"
            >
              <i class="bi bi-x-lg"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="card-body bg-light">
      <form method="post">
        <div class="form-group">
          <div class="card-body p-3">
            <div class="row mb-2">
              <div class="col-md-3">
                <label>Cari Durum Açıklama</label>
                <label class="form-control text-capitalize"
                  >@tblCariDurum.CariDurumAciklama</label
                >
              </div>

              <div class="col-md-3">
                <label>Durum</label>
                @{ if (tblCariDurum.Silindi == false) {
                <label class="form-control">Mevcut</label>
                } else {
                <label class="form-control">Silindi</label>
                } }
              </div>
            </div>
            <div class="row mb-2">
              <div class="col-md-3">
                <label>Oluşturan</label>
                <label class="form-control"
                  >@olusturan.KullaniciAdi @olusturan.KullaniciSoyadi</label
                >
              </div>
              <div class="col-md-3">
                <label>Oluşturulma Tarihi</label>
                <label class="form-control"
                  >@tblCariDurum.OlusturulmaTarih.Date.ToShortDateString()</label
                >
              </div>
              <div class="col-md-3">
                <label>Son Değiştiren</label>
                <label class="form-control"
                  >@sonDegistiren.KullaniciAdi
                  @sonDegistiren.KullaniciSoyadi</label
                >
              </div>
              <div class="col-md-3">
                <label>Son Değiştirilme Tarihi</label>
                <label class="form-control"
                  >@tblCariDurum.SonDegistirmeTarih.Date.ToShortDateString()</label
                >
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
