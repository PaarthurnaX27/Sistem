@using BusinessLayer.Concrete;
@using DataAccessLayer.EntityFramework;
@{
    ParaBirimiManager pbm = new ParaBirimiManager(new EfParaBirimiDal());
    KullaniciManager km = new KullaniciManager(new EfKullaniciDal());
    int paraBirimiId = ViewBag.id;
    var tblParaBirimi = pbm.TGetByID(paraBirimiId);
    var sonDegistiren = km.TGetByID(tblParaBirimi.SonDegistiren);
    var olusturan = km.TGetByID(tblParaBirimi.Olusturan);

}
<div id="divContent" class="card">
    <div class="card-header bg-gray">
        <div class="row justify-content-between">
            <div class="col-md-3">
                <div class="row">
                    <h3>Para Birimi Gör</h3>
                </div>
            </div>
            <div class="col-md-2">
                <div class="row justify-content-end">
                    <div class="col-4">
                        <h4>
                            <button type="submit" form="frmModulEkle"
                                    class=" align-right btn btn-primary btn-lg float-right not-allowed" disabled>
                                <i class="bi bi-database-add "></i>
                            </button>
                        </h4>
                    </div>
                    <div class="col-4">
                        <a asp-action="DtParaBirimi" asp-controller="DtParaBirimi" class=" btn btn-lg btn-danger "><i class="bi bi-x-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body bg-light">

    <form method="post">
        <div class="form-group ">
            <div class="card-body p-3">
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Para Birimi</label>
                        <label class="form-control form-control-sm text-capitalize">@tblParaBirimi.ParaBirimiAdi</label>
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Para Birimi Kısaltma</label>
                        <label class="form-control form-control-sm text-uppercase">@tblParaBirimi.ParaBirimiKisaltma</label>
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Para Birimi Simge</label>
                        <label class="form-control form-control-sm">@tblParaBirimi.ParaBirimiSimge</label>
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Durum</label>
                        @{
                            if (tblParaBirimi.Silindi == false)
                            {
                                <label class="form-control form-control-sm ">Mevcut</label>
                            }
                            else
                            {
                                <label class="form-control form-control-sm ">Silindi</label>
                            }
                        }
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Oluşturan</label>
                        <label class="form-control form-control-sm ">@olusturan.KullaniciAdi @olusturan.KullaniciSoyadi</label>
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Oluşturulma Tarihi</label>
                        <label class="form-control form-control-sm">@tblParaBirimi.OlusturulmaTarih.Date.ToShortDateString()</label>
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Son Değiştiren</label>
                        <label class="form-control form-control-sm ">@sonDegistiren.KullaniciAdi @sonDegistiren.KullaniciSoyadi</label>
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Son Değiştirilme Tarihi</label>
                        <label class="form-control form-control-sm">@tblParaBirimi.SonDegistirmeTarih.Date.ToShortDateString()</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
    </div>
</div>
