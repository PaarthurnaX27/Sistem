@model EntityLayer.Concrete.ParaBirimi
@{
    var error = TempData["error"];
    if (error != null)
    {
        <script type="text/javascript">window.onload = function () {
    var Toast = Swal.mixin({
        toast: true,
        position: 'top-end',
        showConfirmButton: false,
        timer: 3000
    });

        Toast.fire({
            icon: 'error',
            title: 'Ekleme İşlemi Başarısız Oldu'
        })

            };</script>
    }
}
<form asp-controller="DtParaBirimi" asp-action="ParaBirimiEkle"  method="post">
    <div class="form-group ">
        <div class="card-body p-3">
            <div class="row mb-2">
                <div class="col-md-3">
                    <label>Para Birimi</label>
                    <input type="Text" class="form-control text-capitalize" placeholder="Para Birimi"asp-for="@Model.ParaBirimiAdi" required/>
                </div>
                <div class="col-md-3">
                    <label>Kısaltma</label>
                    <input type="text" class="form-control text-uppercase" asp-for="@Model.ParaBirimiKisaltma" placeholder="Kısaltma" required/>
                </div>
                <div class="col-md-3">
                    <label>Simge</label>
                    <input class="form-control" placeholder="Simge" type="text"  asp-for="@Model.ParaBirimiSimge" required/>
                </div>
            </div>
        </div>
        <div class="clearfix">
            <button type="submit" class=" align-right btn btn-primary m-3 col-2 float-right"> Ekle</button>
        </div>
    </div>
</form>