@using BusinessLayer.Concrete;
@using DataAccessLayer.EntityFramework;
@model EntityLayer.Concrete.ParaBirimi
@{

    KullaniciManager km = new KullaniciManager(new EfKullaniciDal());
    ParaBirimiManager pbm = new ParaBirimiManager(new EfParaBirimiDal());

    int paraBirimiId = ViewBag.id;
    var paraBirimi = pbm.TGetByID(paraBirimiId);
    var olusturan = km.TGetByID(paraBirimi.Olusturan);
    var error = TempData["error"];
    if (error != null)
    {
        <script type="text/javascript">window.onload = function () {
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });
                Toast.fire({
                    icon: 'error',
                    title: 'Güncelleme İşlemi Başarısız Oldu'
                })
            };</script>
    }
}
<div id="divContent" class="card  bg-light">
    <div class="card-header bg-gray">
        <div class="row justify-content-between">
            <div class="col-md-3">
                <div class="row">
                    <h3>
                        Para Birimi Güncelle
                    </h3>
                </div>
            </div>
            <div class="col-md-2">
                <div class="row justify-content-end">
                    <div class="col-4">
                        <button form="frmParaBirimiEkle" type="submit" class=" align-right btn btn-info btn-lg"> <i class="bi bi-database-fill-add"></i></button>
                    </div>
                    <div class="col-4">
                        <button type="button" class="btn btn-warning btn-lg" data-toggle="modal" data-target="#modalSil"><i class="bi bi-trash3-fill" style="color: white;"></i></button>
                    </div>
                    <div class="col-4">
                        <a asp-action="DtParaBirimi" asp-controller="DtParaBirimi" class=" btn btn-lg btn-danger"><i class="bi bi-x-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <form id="frmParaBirimiEkle" asp-controller="DtParaBirimi" asp-action="ParaBirimiGuncelle" asp-route-paraBirimiId="@paraBirimiId" asp-route-olusturan="@paraBirimi.Olusturan" asp-route-olusturulmaTarihi="@paraBirimi.OlusturulmaTarih" method="post">
        <div class="form-group ">
            <div class="card-body p-3">
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Para Birimi</label>
                        <input type="Text" class="form-control form-control-sm text-capitalize" value="@paraBirimi.ParaBirimiAdi" placeholder="Para Birimi" name="ParaBirimiAdi" asp-for="@Model.ParaBirimiAdi">
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Kısaltma</label>
                        <input type="text" class="form-control form-control-sm text-uppercase" value="@paraBirimi.ParaBirimiKisaltma" asp-for="@Model.ParaBirimiKisaltma">
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Simge</label>
                        <input class="form-control form-control-sm" type="text" value="@paraBirimi.ParaBirimiSimge" name="ParaBirimiSimge" asp-for="@Model.ParaBirimiSimge" />
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Oluşturan</label>
                        <label class="form-control form-control-sm ">@olusturan.KullaniciAdi @olusturan.KullaniciSoyadi</label>
                    </div>
                </div>
                <div class="row mb-2">


                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Oluşturulma Tarihi</label>
                        <label class="form-control form-control-sm">@paraBirimi.OlusturulmaTarih.Date.ToShortDateString()</label>
                    </div>
                    <div class="col-md-3">
                        <label class="col-form-label col-form-label-sm">Son Değiştirme Tarihi</label>
                        <label class="form-control form-control-sm">@paraBirimi.SonDegistirmeTarih.Date.ToShortDateString()</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="modal fade" id="modalSil">
    <div class="modal-dialog">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h4 class="modal-title">Şehir Silinecek</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <p>Silmek istediğinizden emin misiniz?&hellip;</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-outline-light" data-dismiss="modal">İptal</button>
                <a href="/DtParaBirimi/DeleteParaBirimi/@paraBirimiId" class="btn btn-outline-light">Sil</a>
            </div>
        </div>

    </div>

</div>

