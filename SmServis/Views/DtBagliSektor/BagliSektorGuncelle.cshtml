@using BusinessLayer.Concrete;
@using DataAccessLayer.EntityFramework;
@model EntityLayer.Concrete.BagliSektor
@{
    BagliSektorManager bsm = new BagliSektorManager(new EfBagliSektorDal());
    AnaSektorManager asm = new AnaSektorManager(new EfAnaSektorDal());
    KullaniciManager km = new KullaniciManager(new EfKullaniciDal());

    int bagliSektorId = ViewBag.id;
    var bagliSektor = bsm.TGetByID(bagliSektorId);
    var anaSektor = asm.TGetByID(bagliSektor.AnaSektorId);
    var olusturan = km.TGetByID(bagliSektor.Olusturan);
    var error = TempData["error"];
    if (error != null)
    {
        <script type="text/javascript">window.onload = function () {
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });
                Toast.fire({
                    icon: 'error',
                    title: 'Güncelleme İşlemi Başarısız Oldu'
                })
            };</script>
    }
}
<div id="divContent" class="card  bg-light">
    <form asp-controller="DtBagliSektor" asp-action="BagliSektorGuncelle" asp-route-bagliSektorId="@bagliSektorId" asp-route-olusturan="@bagliSektor.Olusturan" asp-route-olusturulmaTarihi="@bagliSektor.OlusturulmaTarih" method="post">
        <div class="form-group ">
            <div class="card-body p-3">
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label>BagliSektor Adı</label>
                        <input type="Text" class="form-control text-uppercase" value="@bagliSektor.BagliSektorAdi" placeholder="BagliSektor Adı" name="BagliSektorAdi" asp-for="@Model.BagliSektorAdi">
                    </div>
                    <div class="col-md-3">
                        <label>AnaSektor</label>
                        <select id="anaSektor2" asp-for="@Model.AnaSektorId" class="form-control select2bs4" style="width: 100%;">
                            <option selected value="@anaSektor.AnaSektorId">@anaSektor.AnaSektorAdi</option>
                            @foreach (var anaSektorList in ViewBag.anaSektorList)
                            {
                                <option value="@anaSektorList.AnaSektorId">@anaSektorList.AnaSektorAdi</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label>Oluşturan</label>
                        <label class="form-control ">@olusturan.KullaniciAdi @olusturan.KullaniciSoyadi</label>
                    </div>
                    <div class="col-md-3">
                        <label>Oluşturulma Tarihi</label>
                        <label class="form-control">@bagliSektor.OlusturulmaTarih.Date.ToShortDateString()</label>
                    </div>
                    <div class="col-md-3">
                        <label>Son Değiştirme Tarihi</label>
                        <label class="form-control">@bagliSektor.SonDegistirmeTarih.Date.ToShortDateString()</label>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-end">

                <button type="button" class="btn btn-danger m-3 col-2" data-toggle="modal" data-target="#modalSil">Sil</button>
                <button type="submit" class=" align-right btn btn-primary m-3 col-2 float-right"> Güncelle</button>
            </div>
        </div>
    </form>
</div>

<div class="modal fade" id="modalSil">
    <div class="modal-dialog">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h4 class="modal-title">BagliSektor Silinecek</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <p>Silmek istediğinizden emin misiniz?&hellip;</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-outline-light" data-dismiss="modal">İptal</button>
                <a href="/DtBagliSektor/DeleteBagliSektor/@bagliSektorId" class="btn btn-outline-light">Sil</a>
            </div>
        </div>

    </div>

</div>

