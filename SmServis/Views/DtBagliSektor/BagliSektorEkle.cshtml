@model EntityLayer.Concrete.BagliSektor
@{
    var error = TempData["error"];
    if (error != null)
    {
        <script type="text/javascript">window.onload = function () {
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });

                Toast.fire({
                    icon: 'error',
                    title: 'Ekleme İşlemi Başarısız Oldu'
                })

            };</script>
    }
}
<form asp-controller="DtBagliSektor" asp-action="BagliSektorEkle" method="post">
    <div class="form-group ">
        <div class="card-body p-3">
            <div class="row mb-2">
                <div class="col-md-3">
                    <label>BagliSektor</label>
                    <input type="Text" class="form-control " placeholder="BagliSektor" name="BagliSektorAdi" asp-for="@Model.BagliSektorAdi" required />
                </div>
                <div class="col-md-3">
                    <label>AnaSektor</label>
                    <select id="anaSektor2" asp-for="@Model.AnaSektorId" class="form-control select2bs4" style="width: 100%;" required>
                        <option selected disabled>AnaSektor Seçin</option>
                        @foreach (var anaSektorList in ViewBag.anaSektorList)
                        {
                            <option value="@anaSektorList.AnaSektorId">@anaSektorList.AnaSektorAdi</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="clearfix">
            <button type="submit" class=" align-right btn btn-primary m-3 col-2 float-right"> Ekle</button>
        </div>
    </div>
</form>