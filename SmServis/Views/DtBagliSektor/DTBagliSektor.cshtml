@using BusinessLayer.Concrete;
@using DataAccessLayer.EntityFramework;
@{
    var dptm = new AnaSektorManager(new EfAnaSektorDal());
    var pznm = new BagliSektorManager(new EfBagliSektorDal());
    var km = new KullaniciManager(new EfKullaniciDal());


}
<style>
    .select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 31px !important;
    }
</style>
<div class="card bg-light">
    <div class="card">
        <div class="card-header bg-gray">
            <div class="row justify-content-between">
                <div class="col-md-4">
                    <h3>Bağlı Sektör Destek Tablosu</h3>
                </div>
                <div class="col-md-2">
                    <div class="row justify-content-end">
                        <div class="col-4">
                            <a asp-action="Index" asp-controller="DestekTablosu" class=" btn btn-lg btn-danger ">
                                <i class="bi bi-x-lg"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body bg-light">
            <div class="m-2">
                <div class="col">
                    <form id="fltAreaBagliSektor" asp-controller="DtBagliSektor" asp-action="DTBagliSektor" asp-route-id="" method="post">
                        <div class="row mb-3">
                            <div class="col-md-4 mb-1">
                                <label class="col-form-label col-form-label-sm">Bağlı Sektör</label>
                                <input type="text" class="form-control form-control-sm" name="bagliSektorAdi" value="@ViewBag.bagliSektorAdi" placeholder="BagliSektor Adı">
                            </div>
                            <div class="col-md-4 mb-1 ">
                                <label class="col-form-label col-form-label-sm">Ana Sektör</label>
                                <select id="sAnaSektorFilter1" class="form-control select2bs4" style="width: 100%;" name="anaSektorId">
                                    @if (ViewBag.anaSektorId == null || ViewBag.anaSektorId == "")
                                    {
                                        <option selected disabled>AnaSektor Seçin</option>
                                    }
                                    else
                                    {
                                        <option selected value="@ViewBag.anaSektorId">@ViewBag.anaSektorAdi</option>
                                    }

                                    @foreach (var anaSektor in ViewBag.anaSektorList)
                                    {
                                        <option value="@anaSektor.AnaSektorId">@anaSektor.AnaSektorAdi</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <hr class="divider">
                        <div class="row ">
                            <div class="form-check col-4">
                                <input name="silindi" id="chckSilindi" type="checkbox" value="true" checked="@ViewBag.chckSilindi" onclick="filter_isDeleted()" />
                                @if (ViewBag.lblSilindi == null)
                                {
                                    <label id="lblChck" class="form-check-label" for="chckSilindi">
                                        Mevcut
                                    </label>
                                }
                                else
                                {
                                    <label id="lblChck" class="form-check-label" for="chckSilindi">
                                        @ViewBag.lblSilindi
                                    </label>
                                }

                            </div>
                        </div>
                        <hr class="divider">
                        <div class="row">
                        </div>
                        <button onclick="filterSifirla(); FillCountry()" type="button" class="btn btn-primary">Sıfırla</button>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="card bg-light">
        <div class="card-header">
            <div class="col-md-12 mb-1 d-flex justify-content-between">
                <button type="submit" form="fltAreaBagliSektor" class="btn btn-outline-primary rounded-1 col-md-3 mb-1 mr-1">
                    Ara
                    <i class="bi bi-binoculars"></i>
                </button>
                <a onclick="icerikGor('BagliSektor')" class="btn btn-outline-primary rounded-1 col-md-3 mb-1 mr-1">
                    Gör
                    <i class="bi bi-eye"></i>
                </a>
                <a onclick="guncelle('BagliSektor')" class="btn btn-outline-primary rounded-1 col-md-3 mb-1 mr-1">
                    Değiştir
                    <i class="bi bi-arrow-counterclockwise"></i>
                </a>
                <a asp-controller="DtBagliSektor" asp-action="BagliSektorEkle" class="btn btn-outline-primary rounded-1 col-md-3 mb-1">
                    Ekle
                    <i class="bi bi-clipboard-plus"></i>
                </a>
            </div>
        </div>
        <div class="card-body">
            <table id="tblDestek" class="table table-borderless table-hover  ">
                <thead>
                    <tr>
                        <th>Seç</th>
                        <th>BagliSektor Adı</th>
                        <th>AnaSektor</th>
                        <th>Son Değiştiren</th>
                        <th>Oluşturan</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.bagliSektorList)
                    {
                        var tblAnaSektor = dptm.TGetByID(item.AnaSektorId);
                        var olusturan = km.TGetByID(item.Olusturan);
                        var sonDegistiren = km.TGetByID(item.SonDegistiren);
                        <tr>
                            <td><input name="radio" type="radio" value="@item.BagliSektorId" /></td>
                            <td>@item.BagliSektorAdi</td>
                            <td>@tblAnaSektor.AnaSektorAdi</td>
                            <td>@olusturan.KullaniciAdi @olusturan.KullaniciSoyadi</td>
                            <td>@sonDegistiren.KullaniciAdi @sonDegistiren.KullaniciSoyadi</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal fade" id="modal">
    <div class="modal-dialog">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h4 class="modal-title">UYARI</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Lütfen Seçim Yapınız&hellip;</p>
            </div>
            <div class="modal-footer justify-content-start">
                <button type="button" class="btn btn-outline-light" data-dismiss="modal">Kapat</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


