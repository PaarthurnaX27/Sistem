@using BusinessLayer.Concrete;
@using DataAccessLayer.EntityFramework;
@{
    CinsiyetManager cnsm = new CinsiyetManager(new EfCinsiyetDal());
    KullaniciManager km = new KullaniciManager(new EfKullaniciDal());
    int cinsiyetId = ViewBag.id;
    var tblCinsiyet = cnsm.TGetByID(cinsiyetId);
    var sonDegistiren = km.TGetByID(tblCinsiyet.SonDegistiren);
    var olusturan = km.TGetByID(tblCinsiyet.Olusturan);

}
<div id="divContent" class="card  bg-light">
    <form method="post">
        <div class="form-group ">
            <div class="card-body p-3">
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label>Cinsiyet</label>
                        <label class="form-control text-capitalize">@tblCinsiyet.CinsiyetAciklama</label>
                    </div>

                    <div class="col-md-3">
                        <label>Durum</label>
                        @{
                            if (tblCinsiyet.Silindi == false)
                            {
                                <label class="form-control ">Mevcut</label>
                            }
                            else
                            {
                                <label class="form-control ">Silindi</label>
                            }
                        }
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label>Oluşturan</label>
                        <label class="form-control ">@olusturan.KullaniciAdi @olusturan.KullaniciSoyadi</label>
                    </div>
                    <div class="col-md-3">
                        <label>Oluşturulma Tarihi</label>
                        <label class="form-control">@tblCinsiyet.OlusturulmaTarih.Date.ToShortDateString()</label>
                    </div>
                    <div class="col-md-3">
                        <label>Son Değiştiren</label>
                        <label class="form-control ">@sonDegistiren.KullaniciAdi @sonDegistiren.KullaniciSoyadi</label>
                    </div>
                    <div class="col-md-3">
                        <label>Son Değiştirilme Tarihi</label>
                        <label class="form-control">@tblCinsiyet.SonDegistirmeTarih.Date.ToShortDateString()</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
