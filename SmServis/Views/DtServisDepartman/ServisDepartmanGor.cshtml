@model EntityLayer.Concrete.ServisDepartman
@{
    ServisDepartmanManager sdm=new ServisDepartmanManager(new EfServisDepartmanDal());
    KullaniciManager km=new KullaniciManager(new EfKullaniciDal());
    int servisDepartmanId=ViewBag.id;
    var tblServisDepartman=sdm.TGetByID(servisDepartmanId);
    var olusturan=km.TGetByID(tblServisDepartman.Olusturan);
    var sonDegistiren=km.TGetByID(tblServisDepartman.SonDegistiren);
}
<div class="card">
    <div class="card-header bg-gray">
        <div class="row justify-content-between">
            <div class="col-md-3">
                <div class="row">
                    <h3>Servis Departmanı Gör</h3>
                </div>
            </div>
            <div class="col-md-2">
                <div class="row justify-content-end">
                    <div class="col-4">
                        <h4>
                            <button type="submit" form="frmServisDepartmanEkle"
                                class=" align-right btn btn-primary btn-lg float-right not-allowed" disabled><i class="bi bi-database-add "></i></button>
                        </h4>
                    </div>
                    <div class="col-4">
                        <a asp-action="DtServisDepartman" asp-controller="DtServisDepartman" class=" btn btn-lg btn-danger "><i class="bi bi-x-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body bg-light">
        <form id="frmServisDepartmanEkle" asp-controller="DtServisDepartman" asp-action="ServisDepartmanEkle" method="post">
            <div class="form-group ">
                <div class="card-body p-3">
                    <div class="row mb-2">
                        <div class="col-md-3">
                            <label class="col-form-label-sm">Servis Departmanı</label>
                            <label class="form-control form-control-sm text-capitalize">@tblServisDepartman.ServisDepartmanAdi</label>
                        </div>
                    </div>
                    <hr class=" divider">
                    <div class="row mb-2">
                          <div class="col-md-3">
                            <label class="col-form-label-sm">Oluşturan</label>
                            <label class="form-control form-control-sm text-capitalize">@olusturan.KullaniciAdi @olusturan.KullaniciAdi2 @olusturan.KullaniciSoyadi</label>
                        </div>
                        <div class="col-md-3">
                            <label class="col-form-label-sm">Oluşturulma Tarihi</label>
                            <label class="form-control form-control-sm text-capitalize">@tblServisDepartman.OlusturulmaTarih</label>
                        </div>
                        <div class="col-md-3">
                            <label class="col-form-label-sm">Son Değiştiren</label>
                            <label class="form-control form-control-sm text-capitalize">@sonDegistiren.KullaniciAdi @sonDegistiren.KullaniciAdi2 @sonDegistiren.KullaniciSoyadi</label>
                        </div>
                        <div class="col-md-3">
                            <label class="col-form-label-sm">Son Değiştirilme Tarihi</label>
                            <label class="form-control form-control-sm text-capitalize">@tblServisDepartman.SonDegistirmeTarih</label>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>