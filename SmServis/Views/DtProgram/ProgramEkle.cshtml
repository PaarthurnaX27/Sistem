@model EntityLayer.Concrete.Programs
@{
    var error = TempData["error"];
    if (error != null)
    {
        <script type="text/javascript">window.onload = function () {
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });

                Toast.fire({
                    icon: 'error',
                    title: 'Ekleme İşlemi Başarısız Oldu'
                })
            };</script>
    }
}
<div class="bg-light shadow">
  <div class="bg-secondary rounded-top">
    <div class="d-flex container-fluid nav-general">
      <div class="col-sm-6">
        <div class="nav-brand">Program Ekle</div>
      </div>
      <div class="col-sm-6 col-md-5 col-lg-3 ml-auto">
        <ul class="list-items float-right">
          <li class="col-sm-4 mr-3">
            <button
              type="submit"
              form="frmProgramEkle"
              class="btn btn-info btn-lg"
            >
              <i class="bi bi-database-add"></i>
            </button>
          </li>
          @*
          <li class="col-sm-4">
            <button
              type="button"
              class="btn btn-warning btn-lg"
              data-toggle="modal"
              data-target="#modalSil"
            ></button>
          </li>
          *@
          <li class="col-sm-4">
            <a
              asp-action="DtProgram"
              asp-controller="DtProgram"
              class="btn btn-danger btn-lg"
            >
              <i class="bi bi-x-lg"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="card-body bg-light">
      <form
        id="frmProgramEkle"
        asp-controller="DtProgram"
        asp-action="ProgramEkle"
        method="post"
      >
        <div class="form-group">
          <div class="card-body p-3">
            <div class="row mb-2">
              <div class="col-md-3">
                <label class="col-form-label-sm">Program</label>
                <input
                  type="Text"
                  class="form-control form-control-sm text-capitalize"
                  placeholder="Program"
                  asp-for="@Model.ProgramAdi"
                  required
                />
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
