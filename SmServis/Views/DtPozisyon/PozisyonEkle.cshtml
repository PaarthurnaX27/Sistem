@model EntityLayer.Concrete.Pozisyon
@{
    var error = TempData["error"];
    if (error != null)
    {
        <script type="text/javascript">window.onload = function () {
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });

                Toast.fire({
                    icon: 'error',
                    title: 'Ekleme İşlemi Başarısız Oldu'
                })

            };</script>
    }
}
<form asp-controller="DtPozisyon" asp-action="PozisyonEkle" method="post">
    <div class="form-group ">
        <div class="card-body p-3">
            <div class="row mb-2">
                <div class="col-md-3">
                    <label>Pozisyon</label>
                    <input type="Text" class="form-control " placeholder="Pozisyon" name="PozisyonAdi" asp-for="@Model.PozisyonAdi" required />
                </div>
                <div class="col-md-3">
                    <label>Departman</label>
                    <select id="departman2" asp-for="@Model.DepartmanId" class="form-control select2bs4" style="width: 100%;" required>
                        <option selected disabled>Departman Seçin</option>
                        @foreach (var departmanList in ViewBag.departmanList)
                        {
                            <option value="@departmanList.DepartmanId">@departmanList.DepartmanAdi</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="clearfix">
            <button type="submit" class=" align-right btn btn-primary m-3 col-2 float-right"> Ekle</button>
        </div>
    </div>
</form>