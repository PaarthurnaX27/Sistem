@model EntityLayer.Concrete.Pozisyon
@{
    var error = TempData["error"];
    if (error != null)
    {
        <script type="text/javascript">window.onload = function () {
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });

                Toast.fire({
                    icon: 'error',
                    title: 'Ekleme İşlemi Başarısız Oldu'
                })

            };</script>
    }
}
<div class="card">
    <div class="card-header bg-gray rounded-1">
            <div class="row justify-content-between">
                <div class="col-sm-6 col-md-3" >
                    <div class="row">
                        <h3 class="p-2">Pozisyon Ekle</h3>
                    </div>
                </div>
                <div class="col-sm-6 col-md-3">
                        <div class="row justify-content-around float-right mx-1">
                            <div class="col-sm-6 col-md-4">
                                <h4>
                                    <button type="submit" class="btn btn-info btn-lg" form="frmPozisyonEkle"><i class="bi bi-database-add"></i></button>
                                </h4>
                            </div>
                            <div class="col-sm-6 col-md-4">
                                <a class="btn btn-lg btn-danger" asp-controller="DtPozisyon" asp-action="DtPozisyon" form="addCariForm"><i class="bi bi-x-lg"></i></a>
                            </div>
                        </div>
                </div>
            </div>
        </div>

    <form id="frmPozisyonEkle" asp-controller="DtPozisyon" asp-action="PozisyonEkle" method="post">
        <div class="form-group ">
            <div class="card-body p-3">
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label>Pozisyon</label>
                        <input type="Text" class="form-control " placeholder="Pozisyon" name="PozisyonAdi" asp-for="@Model.PozisyonAdi" required />
                    </div>
                    <div class="col-md-3">
                        <label>Departman</label>
                        <select id="departman2" asp-for="@Model.DepartmanId" class="form-control select2bs4" style="width: 100%;" required>
                            <option selected disabled>Departman Seçin</option>
                            @foreach (var departmanList in ViewBag.departmanList)
                            {
                                <option value="@departmanList.DepartmanId">@departmanList.DepartmanAdi</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>