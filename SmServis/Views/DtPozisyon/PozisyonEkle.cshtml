@model EntityLayer.Concrete.Pozisyon
@{
    var error = TempData["error"];
    if (error != null)
    {
        <script type="text/javascript">window.onload = function () {
                var Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000
                });

                Toast.fire({
                    icon: 'error',
                    title: 'Ekleme İşlemi Başarısız Oldu'
                })

            };</script>
    }
}
<div class="bg-light">
  <div class="bg-secondary rounded-top">
    <div class="d-flex container-fluid nav-general">
      <div class="col-sm-6">
        <div class="nav-brand">Pozisyon Ekle</div>
      </div>
      <div class="col-sm-6 col-md-5 col-lg-3 ml-auto">
        <ul class="list-items float-right">
          <li class="col-sm-4 mr-3">
            <button
              type="submit"
              form="frmPozisyonEkle"
              class="btn btn-info btn-lg"
            >
              <i class="bi bi-database-add"></i>
            </button>
          </li>
          @*
          <li class="col-sm-4">
            <button
              type="button"
              class="btn btn-warning btn-lg"
              data-toggle="modal"
              data-target="#modalSil"
            ></button>
          </li>
          *@
          <li class="col-sm-4">
            <a
              asp-action="DtPozisyon"
              asp-controller="DtPozisyon"
              class="btn btn-danger btn-lg"
            >
              <i class="bi bi-x-lg"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="card-body bg-light">
      <form
        id="frmPozisyonEkle"
        asp-controller="DtPozisyon"
        asp-action="PozisyonEkle"
        method="post"
      >
        <div class="form-group">
          <div class="card-body p-3">
            <div class="row mb-2">
              <div class="col-md-3">
                <label>Pozisyon</label>
                <input
                  type="Text"
                  class="form-control"
                  placeholder="Pozisyon"
                  name="PozisyonAdi"
                  asp-for="@Model.PozisyonAdi"
                  required
                />
              </div>
              <div class="col-md-3">
                <label>Departman</label>
                <select
                  id="departman2"
                  asp-for="@Model.DepartmanId"
                  class="form-control select2bs4"
                  style="width: 100%"
                  required
                >
                  <option selected disabled>Departman Seçin</option>
                  @foreach (var departmanList in ViewBag.departmanList) {
                  <option value="@departmanList.DepartmanId">
                    @departmanList.DepartmanAdi
                  </option>
                  }
                </select>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
