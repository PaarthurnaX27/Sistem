@using BusinessLayer.Concrete;
@using DataAccessLayer.EntityFramework;
@{
    SehirManager sm = new SehirManager(new EfSehirDal());
    UlkeManager um = new UlkeManager(new EfUlkeDal());
    KullaniciManager km = new KullaniciManager(new EfKullaniciDal());
    int sehirId = ViewBag.id;
    var tblSehir = sm.TGetByID(sehirId);
    var ulkeAdi = um.TGetByID(tblSehir.UlkeId);
    var sonDegistiren = km.TGetByID(tblSehir.SonDegistiren);
    var olusturan = km.TGetByID(tblSehir.Olusturan);

}
<div class="card">
    <div class="card-header bg-gray">
        <div class="row justify-content-between">
            <div class="col-md-3">
                <div class="row">
                    <h3>Şehir Gör</h3>
                </div>
            </div>
            <div class="col-md-2">
                <div class="row justify-content-end">
                    <div class="col-4">
                        <h4>
                            <button type="submit" form="frmModulEkle"
                                    class=" align-right btn btn-primary btn-lg float-right not-allowed" disabled>
                                <i class="bi bi-database-add "></i>
                            </button>
                        </h4>
                    </div>
                    <div class="col-4">
                        <a asp-action="DtSehir" asp-controller="DtSehir" class=" btn btn-lg btn-danger "><i class="bi bi-x-lg"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body bg-light">
        <form method="post">
            <div class="form-group ">
                <div class="card-body p-3">
                    <div class="row mb-2">
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Şehir Adı</label>
                            <label class="form-control  form-control-sm">@tblSehir.SehirAdi</label>
                        </div>
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Plaka Kodu</label>
                            <label class="form-control  form-control-sm">@tblSehir.PlakaKodu</label>

                        </div>
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">TelefonKodu</label>
                            <label class="form-control form-control-sm">@tblSehir.TelefonKodu</label>
                        </div>

                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Posta Kodu</label>
                            <label class="form-control form-control-sm">@tblSehir.PostaKodu</label>
                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-3">
                            <label class= "col-form-label col-form-label-sm">Oluşturan</label>
                            <label class="form-control form-control-sm ">@olusturan.KullaniciAdi @olusturan.KullaniciSoyadi</label>
                        </div>
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Son Değiştiren</label>
                            <label class="form-control form-control-sm ">@sonDegistiren.KullaniciAdi @sonDegistiren.KullaniciSoyadi</label>

                        </div>
                        <div class="col-md-3">
                            <label class= "col-form-label col-form-label-sm">Ülke Adı</label>
                            <label class="form-control form-control-sm">@ulkeAdi.UlkeAdi</label>
                        </div>
                        <div class="col-md-3">
                            <label class= "col-form-label col-form-label-sm">Durum</label>
                            @{
                                if (tblSehir.Silindi == false)
                                {
                                    <label class="form-control form-control-sm ">Mevcut</label>
                                }
                                else
                                {
                                    <label class="form-control form-control-sm ">Silindi</label>
                                }
                            }


                        </div>
                    </div>
                    <div class="row mb-2">
                        <div class="col-md-3">
                            <label class ="col-form-label col-form-label-sm">Oluşturulma Tarihi</label>
                            <label class="form-control form-control-sm">@tblSehir.OlusturulmaTarih.Date.ToShortDateString()</label>
                        </div>
                        <div class="col-md-3">
                            <label class="col-form-label col-form-label-sm">Son Değiştirilme Tarihi</label>
                            <label class="form-control form-control-sm">@tblSehir.SonDegistirmeTarih.Date.ToShortDateString()</label>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
