@using BusinessLayer.Concrete;
@using DataAccessLayer.EntityFramework;
@{
    AnaSektorManager asm = new AnaSektorManager(new EfAnaSektorDal());
    BagliSektorManager bsm = new BagliSektorManager(new EfBagliSektorDal());
    KullaniciManager km = new KullaniciManager(new EfKullaniciDal());
    int anaSektorId = ViewBag.id;
    var tblAnaSektor = asm.TGetByID(anaSektorId);
    var sonDegistiren = km.TGetByID(tblAnaSektor.SonDegistiren);
    var olusturan = km.TGetByID(tblAnaSektor.Olusturan);

}
<div id="divContent" class="card  bg-light">
    <form method="post">
        <div class="form-group ">
            <div class="card-body p-3">
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label>Ana Sektör</label>
                        <label class="form-control text-capitalize">@tblAnaSektor.AnaSektorAdi</label>
                    </div>

                    <div class="col-md-3">
                        <label>Durum</label>
                        @{
                            if (tblAnaSektor.Silindi == false)
                            {
                                <label class="form-control ">Mevcut</label>
                            }
                            else
                            {
                                <label class="form-control ">Silindi</label>
                            }
                        }
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-3">
                        <label>Oluşturan</label>
                        <label class="form-control ">@olusturan.KullaniciAdi @olusturan.KullaniciSoyadi</label>
                    </div>
                    <div class="col-md-3">
                        <label>Oluşturulma Tarihi</label>
                        <label class="form-control">@tblAnaSektor.OlusturulmaTarih.Date.ToShortDateString()</label>
                    </div>
                    <div class="col-md-3">
                        <label>Son Değiştiren</label>
                        <label class="form-control ">@sonDegistiren.KullaniciAdi @sonDegistiren.KullaniciSoyadi</label>
                    </div>
                    <div class="col-md-3">
                        <label>Son Değiştirilme Tarihi</label>
                        <label class="form-control">@tblAnaSektor.SonDegistirmeTarih.Date.ToShortDateString()</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="card col-md-3 bg-light">
    <div class="card-body p-3">
        <table class="table  ">
            <thead>
                <tr>
                    <td>#</td>
                    <td>Bağlı Sektörler</td>
                    @*<td><a asp-controller="DtPozisyon" asp-action="PozisyonEkle" class="btn btn-primary">Yeni Ekle</a></td>*@
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in ViewBag.bagliSektorList)
                    {

                        var bagliSektorAdi = bsm.TGetByID(item.BagliSektorId);
                    <tr>
                        <td>@i</td>
                        <td>@bagliSektorAdi.BagliSektorAdi</td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>
